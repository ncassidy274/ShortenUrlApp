@model ShortenUrl
@{
    ViewData["Title"] = "Shorten URLs";

    string linkUrl = Model.ShortUrl;
}

<div class="text-center">
    <div class="row">
        <div class="mx-auto col-10 col-md-6 col-lh-6 p-2 ">
            <h1 class="display-4 p-2">Your Shortened URL!</h1>
            <a class ="p2" href="@linkUrl">
                <h2>@Model.ShortUrl</h2>
            </a>
        </div>
    </div>
</div>
